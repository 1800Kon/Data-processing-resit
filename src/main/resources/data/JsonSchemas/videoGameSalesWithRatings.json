{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Video game sales with ratings",
  "description": "Dataset of video game sales with ratings",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the game",
      "type": "string"
    },
    "platform": {
      "description": "The platform for which the game was released",
      "type": "string"
    },
    "releaseYear": {
      "description": "The year in which a specific game was released",
      "type": "number"
    },
    "genre": {
      "description": "The genre of the game",
      "type": "string"
    },
    "publisher": {
      "description": "The publisher of the game",
      "type": "string"
    },
    "globalSales": {
      "description": "Global sales in millions.",
      "type": "number"
    },
    "critScore": {
      "description": "The score of the game",
      "type": "number"
    }
  },
  "required": [
    "name",
    "platform",
    "releaseYear",
    "genre",
    "publisher",
    "globalSales",
    "critScore"
  ]
}

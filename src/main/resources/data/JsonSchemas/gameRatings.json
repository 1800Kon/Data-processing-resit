{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "Metacritic videogame ratings",
  "description": "MetaCritic ratings for videogames",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the game",
      "type": "string"
    },
    "platform": {
      "description": "The platform the game was released on",
      "type": "string"
    },
    "releaseYear": {
      "description": "The date the game was released",
      "type": "string"
    },
    "score": {
      "description": "The metacritic score for the game",
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "userScore": {
      "description": "The user score for the game",
      "type": "number",
      "minimum": 0,
      "maximum": 10
    },
    "developer": {
      "description": "The developer of the game",
      "type": "string"
    },
    "genre": {
      "description": "The developer of the game",
      "type": "string"
    }
  },
  "required": [
"name",
    "platform",
    "releaseYear",
    "score",
    "userScore",
    "developer",
    "genre"
  ]
}
